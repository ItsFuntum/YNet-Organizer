<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>YNet Organizer</title>
  <style>
    body {
      background-color: rgb(0, 0, 0);
      color: white;
      font-family: Arial, sans-serif;
    }

    h1 {
      text-align: center;
      text-decoration: underline;
    }

    ul {
      list-style-type: none;
      padding: 0;
    }

    li {
      margin-bottom: 1rem;
    }

    .player-list {
      color: lime;
      font-weight: bold;
    }

    .player-list li span {
      color: gray;
    }

    .no-players {
      color: red;
      font-weight: bold;
    }

    #toggle-button {
      display: block;
      margin: 1rem auto;
      padding: 0.5rem 1rem;
      background-color: #007bff;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
    }

    #toggle-button:hover {
      background-color: #0056b3;
    }

    .room-container {
      margin-bottom: 1.5rem;
      border: 1px solid white;
      padding: 1rem;
      border-radius: 8px;
    }

    .room-title {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .room-title-prefix {
      font-weight: normal;
      color: gray;
    }

    .room-actions {
      display: flex;
      align-items: center;
      gap: 0.5rem; /* Optional: Add spacing between elements */
    }

    .player-count {
      font-weight: bold;
      font-size: 1rem;
      color: lime; /* Match player count color */
    }


    .room-toggle {
      background-color: #28a745;
      color: white;
      border: none;
      padding: 0.3rem 0.6rem;
      border-radius: 4px;
      cursor: pointer;
    }

    .room-toggle:hover {
      background-color: #1e7e34;
    }

    .room-content {
      margin-top: 1rem;
    }

    .hidden {
      display: none;
    }
  </style>
</head>

<body>

  <button id="toggle-button">Show All Rooms</button>

  <ul>
    <% rooms.forEach((room, index) => { %>
      <div class="room-container" id="room-<%= index %>">
        <div class="room-title">
          <h2> <div class="room-title-prefix"><%= index + 1 %>.</div> <%= room.name %></h2>
          <div class="room-actions">
            <p>
              Players:
                  <% if (room.players && room.players.length > 0) { %>
                    <span class="player-count">
                    <%= room.players.length %>/<%= room.maxPlayers %>
                    </span>
                  <% } else { %>
                    <span class="no-players">
                    0/<%= room.maxPlayers %>
                    </span>
                  <% } %>
            </p>
            <button class="room-toggle" onclick="toggleRoomContent('room-<%= index %>')">Show Room</button>
          </div>
        </div>
        <div class="room-content hidden">
          <p><strong>Address:</strong> <%= room.address %></p>
          <p><strong>Port:</strong> <%= room.port %></p>
          <p><strong>Description:</strong> <%= room.description %></p>
          <p><strong>Players:</strong></p>

          <% if (room.players && room.players.length > 0) { %>
            <ol class="player-list">
              <% room.players.forEach((player, i) => { %>
                <li>
                  <%= player.nickname || "Unknown Player" %>
                  <span>(<%= player.gameName %>)</span>
                </li>
              <% }); %>
            </ol>
          <% } else { %>
            <p class="no-players">No players connected.</p>
          <% } %>

          <p><strong>Has Password:</strong> <%= room.hasPassword ? 'Yes' : 'No' %></p>
        </div>
      </div>
    <% }); %>
  </div>

  <script>
    const toggleButton = document.getElementById("toggle-button");

    // Toggle all rooms
    toggleButton.addEventListener("click", () => {
      const rooms = document.querySelectorAll(".room-container");
      const isCurrentlyHiding = toggleButton.textContent === "Hide All Rooms";

      rooms.forEach(room => {
        const content = room.querySelector(".room-content");
        const toggleBtn = room.querySelector(".room-toggle");

        if (isCurrentlyHiding) {
          content.classList.add("hidden");
          toggleBtn.textContent = "Show Room";
        } else {
          content.classList.remove("hidden");
          toggleBtn.textContent = "Hide Room";
        }
      });

      toggleButton.textContent = isCurrentlyHiding ? "Show All Rooms" : "Hide All Rooms";
    });

    // Toggle individual room content
    function toggleRoomContent(roomId) {
      const room = document.getElementById(roomId);
      const content = room.querySelector(".room-content");
      const toggleBtn = room.querySelector(".room-toggle");

      if (content.classList.contains("hidden")) {
        content.classList.remove("hidden");
        toggleBtn.textContent = "Hide Room";
      } else {
        content.classList.add("hidden");
        toggleBtn.textContent = "Show Room";
      }
    }
  </script>
</body>

</html>